<form id="add_docker_destination_form"
      hx-post="destinations/docker/create"
      hx-target="#add_docker_destination_form"
      hx-on::after-request="event.detail.successful ? create_docker_destination.close() : null"
      class="flex flex-col h-full justify-between">
    <div class="flex flex-col gap-2 text-white">
        <label for="name">Name</label>
        <input id="name" name="name" class="p-2 rounded bg-surface-light"/>
        <label for="endpoint">Endpoint</label>
        <input id="endpoint" name="endpoint" class="p-2 rounded bg-surface-light"/>
    </div>
    <button type="submit"
            class="self-end px-4 py-2 bg-primary-100 rounded-lg inline-flex flex-row gap-2 justify-center items-center">
        Create
    </button>
</form>

